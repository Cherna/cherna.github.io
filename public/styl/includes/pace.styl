.pace
  -webkit-pointer-events none
  pointer-events none

  -webkit-user-select none
  -moz-user-select none
  user-select none
  opacity 1
  transition opacity 0.3s ease-in-out

.pace-inactive
  opacity 0

.pace .pace-progress
  background #8092a2
  position fixed
  z-index 2000
  top 0
  left 0
  width 100%
  height 3px
  opacity 0.7